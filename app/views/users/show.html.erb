<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <div id="profile_show">
      <ul>
        <li><span class="label label-info">Birthday</span><%= @user.birthday %></li>
        <li><span class="label label-info">Location</span><%= @user.location %></li>
        <li><span class="label label-info">Hobby</span><%= @user.hobby %></li>
        <li><span class="label label-info">Comment</span><%= @user.comment %></li>
        <li><%= link_to "Following", following_user_path(@user) %></li>
        <li><%= link_to "Followers", followers_user_path(@user) %></li>
      </ul>
    </div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>